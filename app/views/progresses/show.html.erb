<body class="bg-dark text-white">
  <%= yield %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
      <%= link_to "Fitness Tracker", root_path, class: "navbar-brand fw-bold" %>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
          <%= link_to "Challenges", challenges_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
          <%= link_to "Progresses", progresses_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
          <%= link_to "Users", users_path, class: "nav-link" %>
          </li>
      </ul>
      </div>
  </div>
  </nav>

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <h1><strong>
    Progress of
    <%= link_to @progress.user.username, @progress.user, style: "color: cyan" %>
    in
    <%= link_to @progress.challenge.name, @progress.challenge, style: "color: cyan" %>
  </strong></h1>

  <p style="color: cyan"><strong>Points Earned: </strong><strong><%= @progress.points_earned %></strong></p>
  <p><strong>Update Frequency:</strong> <%= @progress.update_frequency %></p>

  <div>
    <%= link_to "Edit this progress", edit_progress_path(@progress), style: "color: cyan" %> |
    <%= link_to "Back to progresses", progresses_path, style: "color: cyan" %>
    <br>
    <%= button_to "Destroy this progress", @progress, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-secondary" %>
  </div>
</body>