<%= form_with(model: challenge) do |form| %>
  <% if challenge.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>

      <ul>
        <% challenge.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :goal, style: "display: block" %>
    <%= form.text_field :goal %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :categories, style: "display: block" %>
    <%= form.text_field :categories %>
  </div>

  <div>
    <%= form.label :start_date, style: "display: block" %>
    <%= form.date_field :start_date %>
  </div>

  <div>
    <%= form.label :end_date, style: "display: block" %>
    <%= form.date_field :end_date %>
  </div>

  <div class="mb-3">
    <%= form.label :creator_id, "Select Creator", class: "form-label" %>
    <%= form.collection_select :creator_id, User.all, :id, :username,
          { prompt: "Choose a user" },
          { class: "form-select" } %>
  </div>

  <div class="mt-3">
    <%= form.submit "Create Challenge", class: "btn btn-secondary" %>
  </div>

<% end %>
