<%# Renders validation errors for a given resource in a visible Bootstrap alert %>
<% if local_assigns[:resource].present? && resource.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">There were problems with the following fields:</h4>
    <ul class="mb-0">
      <% resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
